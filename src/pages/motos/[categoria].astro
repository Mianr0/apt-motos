---
import Layout from "../../layouts/Layout.astro";
import Header from "../../sections/Header.astro";
import Footer from "../../sections/Footer.astro";

// Define todas las categorías disponibles
export async function getStaticPaths() {
  const categorias = [
    {
      id: "enduro",
      nombre: "Enduro 150",
      imagen: "/imagenes/Enduro 150.png",
      descripcion: "Motos todoterreno diseñadas para aventuras off-road",
      modelos: ["Enduro 150", "Enduro 250"],
    },
    {
      id: "nackeds",
      nombre: "Nackeds",
      imagen: "/imagenes/Nacked 150.png",
      descripcion: "Motos urbanas sin carenado, estilo y funcionalidad",
      modelos: ["Nacked 150", "Nacked 250"],
    },
    {
      id: "turismo",
      nombre: "Turismo",
      imagen: "/imagenes/Nacked 250.png",
      descripcion: "Perfectas para viajes largos con comodidad",
      modelos: ["Turismo 250", "Turismo 300"],
    },
    {
      id: "sports",
      nombre: "Sports",
      imagen: "/imagenes/Sport 150.png",
      descripcion: "Velocidad y adrenalina en cada curva",
      modelos: ["Sport 150", "Sport 200"],
    },
    {
      id: "urbanas",
      nombre: "Urbanas",
      imagen: "/imagenes/Urbana 150.png",
      descripcion: "Ideales para la ciudad, ágiles y económicas",
      modelos: ["Urbana 150"],
    },
    {
      id: "clasicas",
      nombre: "Clásicas",
      imagen: "/imagenes/Semiautomatica 150.png",
      descripcion: "Estilo retro con tecnología moderna",
      modelos: ["Clásica 150"],
    },
    {
      id: "automaticas",
      nombre: "Automáticas",
      imagen: "/imagenes/Scoter 150.png",
      descripcion: "Fáciles de conducir, perfectas para principiantes",
      modelos: ["Scooter 150", "Scooter 200"],
    },
    {
      id: "semiautomatica",
      nombre: "Semiautomática",
      imagen: "/imagenes/Semiautomatica 150.png",
      descripcion: "Lo mejor de ambos mundos",
      modelos: ["Semiautomática 150"],
    },
    {
      id: "4x4",
      nombre: "4x4",
      imagen: "/imagenes/Scoter 200.png",
      descripcion: "Potencia y tracción para cualquier terreno",
      modelos: ["4x4 200", "4x4 250"],
    },
  ];

  return categorias.map((cat) => ({
    params: { categoria: cat.id },
    props: { categoria: cat },
  }));
}

const { categoria } = Astro.props;
---

<Layout title={categoria.nombre}>
  <Header />

  <main class="detalle-categoria">
    <div class="hero">
      <img src={categoria.imagen} alt={categoria.nombre} />
      <div class="info">
        <h1>{categoria.nombre}</h1>
        <p>{categoria.descripcion}</p>
      </div>
    </div>

    <section class="modelos">
      <h2>Modelos Disponibles</h2>
      <div class="modelos-grid">
        {
          categoria.modelos.map((modelo) => (
            <div class="modelo-card">
              <h3>{modelo}</h3>
              <img src={categoria.imagen} alt={modelo} />
              <button>Ver Detalles</button>
            </div>
          ))
        }
      </div>
    </section>

    <a href="/motos" class="volver">← Volver a todas las categorías</a>
  </main>

  <Footer />
</Layout>

<style>
  .detalle-categoria {
    padding: 20vh 5vw 10vh;
    min-height: 100vh;
    margin-bottom: 100vh;
  }

  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 5rem;
  }

  .hero img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 25px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .info h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .info p {
    font-size: 1.2rem;
    color: #666;
    line-height: 1.6;
  }

  .modelos {
    margin-top: 4rem;
  }

  .modelos h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .modelos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .modelo-card {
    border: 1px solid #ddd;
    border-radius: 15px;
    padding: 1.5rem;
    text-align: center;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .modelo-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .modelo-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 10px;
    margin: 1rem 0;
  }

  .modelo-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .modelo-card button {
    background: #007bff;
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 25px;
    cursor: pointer;
    font-size: 1rem;
    transition: background 0.3s ease;
  }

  .modelo-card button:hover {
    background: #0056b3;
  }

  .volver {
    display: inline-block;
    margin-top: 3rem;
    padding: 1rem 2rem;
    background: #f0f0f0;
    color: #333;
    text-decoration: none;
    border-radius: 10px;
    transition: background 0.3s ease;
  }

  .volver:hover {
    background: #e0e0e0;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
    }

    .info h1 {
      font-size: 2rem;
    }
  }
</style>
